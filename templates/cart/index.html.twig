{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Carte</h1> 
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.price }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }}</td>
                        <td>
                            <a href="{{ path('app_cart_product_remove', {'id': item.product.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td> 
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5">Votre panier est vide</td>
                    </tr>
                {% endfor %}
            </tbody>   
        </table>

        {% if total > 0 %}
            <br><br>
            <h2>Total: {{ total }} dinars</h2>
            <div class="row">
                <a data-turbo="false" href="{{ path('app_order') }}" class="btn btn-primary col-2 m-lg-1">Valider la commande</a>
                <a href="{{ path('app_cart_remove') }}" class="btn btn-outline-danger col-2 m-lg-1">Vider le panier</a>
            </div>

        {% endif %}



    </div>
{% endblock %}
