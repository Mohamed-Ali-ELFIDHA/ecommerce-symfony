{% extends 'base.html.twig' %}

{% block title %}SubCategory{% endblock %}

{% block body %}
    <div class="container"><br><br>
        <h1>SubCategory</h1> <br><br>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ sub_category.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ sub_category.name }}</td>
                    </tr>
                </tbody>
            </table>

            <button class="btn btn-outline-primary" onclick="window.location.href='{{ path('app_sub_category_index') }}'">
                Back to list
            </button>
            

            <button class="btn btn-outline-primary" onclick="window.location.href='{{ path('app_sub_category_edit', {'id': sub_category.id}) }}'">
                Edit
            </button>

            {{ include('sub_category/_delete_form.html.twig') }}
    </div>
{% endblock %}
